{
  "jsc": {
    "target": "es2020",
    "parser": {
      "syntax": "typescript",
      "tsx": false
    },
    "transform": {
      "decoratorMetadata": true
    },
    "loose": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@@/*": ["./*"]
    }
  },
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": true
}
